# Mental Wellness Backend Environment Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mental_wellness

# OpenRouter API Configuration (for AI chat and task suggestions)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alternative OpenAI Configuration (if using OpenAI directly)
# OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Configuration (for vector search)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=mental-wellness-index

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=uploads

# Rate Limiting (optional)
RATE_LIMIT_PER_MINUTE=60

# SSL/TLS Configuration (for production)
# SSL_CERT_FILE=
# SSL_KEY_FILE=

# Email Configuration (for notifications - optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Redis Configuration (for session management - optional)
# REDIS_URL=redis://localhost:6379

# JWT Configuration (for authentication - optional)
# JWT_SECRET_KEY=your_jwt_secret_key_here
# JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
